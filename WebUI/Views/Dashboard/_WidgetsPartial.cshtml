
<div class="state-overview">
    <div class="row">
        <div class="col-xl-4 col-md-6 col-12">
            <div class="info-box bg-blue">
                <span class="info-box-icon push-bottom"><i class="material-icons">group</i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Patients Treated</span>
                    <span class="info-box-number" id="nbPT">4</span>
                    <div class="progress">
                        <div class="progress-bar" id="prBAR1" width="25%"></div>
                    </div>
                    <span class="progress-description" id="prDES1">25%</span>
                    
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-xl-4 col-md-6 col-12">
            <div class="info-box bg-orange">
                <span class="info-box-icon push-bottom"><i class="material-icons">event_note</i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Disponibilities Filled</span>
                    <span class="info-box-number">5</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 40%"></div>
                    </div>
                    <span class="progress-description">
                        40%
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <div class="col-xl-4 col-md-6 col-12">
            <div class="info-box bg-purple">
                <span class="info-box-icon push-bottom"><i class="material-icons">cancel</i></span>
                <div class="info-box-content">
                    <span class="info-box-text">Canceled Appointments</span>
                    <span class="info-box-number">4</span>
                    <div class="progress">
                        <div class="progress-bar" style="width: 25%"></div>
                    </div>
                    <span class="progress-description">
                        25%
                    </span>
                </div>
                <!-- /.info-box-content -->
            </div>
            <!-- /.info-box -->
        </div>
        <!-- /.col -->
        <!-- /.col -->
    </div>
</div>

<script>
    var nbrePT = @Html.Raw(Json.Encode(ViewBag.NBERPATIENT));
    var ratio = @Html.Raw(Json.Encode(ViewBag.RATIO));
    document.getElementById("nbPT").innerHTML(nbrePT);
    document.getElementById("prBAR1").width = ratio +"%";
    document.getElementById("prDES1").innerHTML(ratio+"%");
    alert("%");

</script>
